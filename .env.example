# NotesHub Environment Configuration
# Copy this file to .env and update with your values

# ============================================================================
# DATABASE
# ============================================================================
MONGO_URL=mongodb://localhost:27017/noteshub

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# EMAIL SERVICE (Resend)
# ============================================================================
EMAIL_ENABLED=true
EMAIL_PROVIDER=resend
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=noreply@noteshub.app
EMAIL_FROM_NAME=NotesHub

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
# Local backup settings
BACKUP_DIR=/app/backups
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESSION=true
BACKUP_TIME=02:00
BACKUP_ON_START=false

# Cloud backup (S3-compatible storage - Optional)
BACKUP_CLOUD_ENABLED=false
BACKUP_S3_BUCKET=noteshub-backups
BACKUP_S3_ENDPOINT=https://s3.amazonaws.com
BACKUP_S3_ACCESS_KEY=your_access_key
BACKUP_S3_SECRET_KEY=your_secret_key

# ============================================================================
# VIRUS SCANNING
# ============================================================================
VIRUS_SCAN_ENABLED=true
QUARANTINE_DIR=/app/quarantine

# ============================================================================
# LOGGING
# ============================================================================
LOG_DIR=/app/logs
LOG_LEVEL=INFO
JSON_LOGGING=true

# ============================================================================
# PERFORMANCE MONITORING
# ============================================================================
PERFORMANCE_MONITORING_ENABLED=true
SLOW_QUERY_THRESHOLD_MS=100
SLOW_ENDPOINT_THRESHOLD_MS=1000

# ============================================================================
# SENTRY ERROR TRACKING (Optional)
# ============================================================================
SENTRY_DSN=
NODE_ENV=production
APP_VERSION=1.0.0

# ============================================================================
# CDN CONFIGURATION (Optional)
# ============================================================================
REACT_APP_CDN_ENABLED=false
REACT_APP_CDN_URL=https://cdn.yourdomain.com

# ============================================================================
# ADMIN CONFIGURATION
# ============================================================================
# Admin user IDs (comma-separated ObjectIDs)
# Example: ADMIN_USER_IDS=507f1f77bcf86cd799439011,507f191e810c19729de860ea
ADMIN_USER_IDS=

# ============================================================================
# SUPABASE (Optional - for cloud storage)
# ============================================================================
SUPABASE_URL=
SUPABASE_KEY=
